@model Historial_C.Models.Evolucion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Evolucion</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @using (Html.BeginForm("Create", "Evolucion"))
            {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                
                <input asp-for="EpisodioId" class="form-control" hidden />
                <span asp-validation-for="EpisodioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionAtencion" class="control-label"></label>
                <input asp-for="DescripcionAtencion" class="form-control" />
                <span asp-validation-for="DescripcionAtencion" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-controller="Episodios" asp-action="Details" asp-route-id="EpisodioId" class="btn btn-secondary btn-dark">Volver</a>
            </div>
            }
        </form>
    </div>
</div>

<div>
    <br />
  

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
